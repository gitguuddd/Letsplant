<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:weightSum="2">
    <TextView
    android:id="@+id/textdienos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="25sp"
        android:textColor="@android:color/holo_orange_dark"
    android:text="@string/dienos" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

    <TextView
            android:text="@string/darbai3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"

            android:id="@+id/textdarbai"
            app:layout_constraintStart_toStartOf="@+id/textdienos"
            app:layout_constraintTop_toBottomOf="@+id/textdienos"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="18dp"
        app:srcCompat="@mipmap/kas"
        android:layout_weight="1"
            android:id="@+id/imageView2"
        />
    </LinearLayout>
</LinearLayout>

</android.support.constraint.ConstraintLayout>