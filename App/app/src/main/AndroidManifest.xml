<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gotdam.letsplant">

    <supports-screens
            android:largeScreens="true"
            android:normalScreens="true"
            android:smallScreens="true"
            android:xlargeScreens="true"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".VolleySingleton"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"

        android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ActivityRegistracija"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ActivityPasirinkimas"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ActivityDarbai"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ActivityKalendorius1"/>
        <activity
                android:name=".ActivityKalendorius"
                android:label="@string/title_activity_kalendorius"
                android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".ActivityPopup"
                android:label="@string/title_activity_popup"
                android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Pop"
                  android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>